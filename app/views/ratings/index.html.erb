<h2>Rating statistics</h2>



<div class="row">
    <div class="col-md-4">
        <h3>Best beers</h3>
        <%= render 'averageList', objects: @best_beers %>
    </div>
    <div class="col-md-4">
        <h3>Best breweries</h3>
        <%=render 'averageList', objects: @best_breweries%>
    </div>
    <div class="col-md-4">
        <h3>Best styles</h3>
        <%= render 'averageList', objects: @best_styles%>
    </div>
</div>

<h3>Most active users</h3>
<table class="table table-hover">
  <thead>
    <th></th>
    <th>Favorite beer</th>
    <th>Prefered style</th>
    <th>Favorite brewery</th>
    <th>Ratings</th>
  </thead>
<tbody>
  <% @most_active_users.each do |user| %>
    <tr>
        <td> <%= link_to user.username, user %> </td>
        <td> <%= link_to user.favorite_beer, user.favorite_beer%></td>
        <td> <%= link_to user.favorite_style, user.favorite_style%></td>
        <td> <%= link_to user.favorite_brewery.name, user.favorite_brewery%></td>
        <td><%= user.ratings.count%></td>
    </tr>
  <% end %>
</tbody>
</table>
<h3>Recent ratings</h3>
<ul>
  <% @recent.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>




